<div id="products-body">
  <% @products.each do |product| %>
  <div class="col-md-4">
    <div class="product-box">
      <%= link_to image_tag( product.image.url, id: "product-index-image"), product_path(product) %>
      <br>
      <hr>
      <%= link_to product.name, product_path(product) %>
      <br>
      <b>$<%= product.price %></b>
      <br>
    </div>
  </div>
  <% end %>
</div>
