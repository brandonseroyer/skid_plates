<%= form_for @car, html: { multipart: true }, remote: true do |f| %>
  <div>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, required: 'required' %>
    <br><br>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
